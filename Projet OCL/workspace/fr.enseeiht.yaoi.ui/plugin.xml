<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="fr.enseeiht.yaoi.commands.category"
            name="Sample Category">
      </category>
      <command
            categoryId="fr.enseeiht.yaoi.commands.category"
            name="Load &amp; Validate"
            id="fr.enseeiht.yaoi.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="fr.enseeiht.yaoi.ui.handlers.LoadValidate"
            commandId="fr.enseeiht.yaoi.commands.sampleCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="fr.enseeiht.yaoi.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="fr.enseeiht.yaoi.commands.sampleCommand"
                  id="fr.enseeiht.yaoi.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.emf.ecore.presentation.ReflectiveEditorID?after=additions">
         <menu
               id="fr.enseeiht.yaoi.ui.mocl.menu"
               label="MOCL">
            <command
                  commandId="fr.enseeiht.yaoi.commands.sampleCommand"
                  id="fr.enseeiht.yaoi.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
