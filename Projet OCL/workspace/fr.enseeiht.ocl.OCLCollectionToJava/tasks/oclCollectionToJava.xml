<?xml version="1.0" encoding="UTF-8"?>
<project default="oclCollectionToJava" name="fr.enseeiht.ocl.OCLCollectionToJava">
    <property name="ECLIPSE_HOME" value="../../../../../../../../../Logiciels/modeling-2023-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="fr.enseeiht.ocl.OCLCollectionToJava.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/fr.enseeiht.ocl.OCLCollectionToJava/bin"/>
    </path>

    <path id="fr.enseeiht.ocl.OCLCollectionToJava.classpath">
        <path refid="fr.enseeiht.ocl.OCLCollectionToJava.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="fr.enseeiht.ocl.OCLCollectionToJava.libraryclasspath.alljars">
        <pathelement location="../fr.enseeiht.ocl.OCLCollectionToJava/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="fr.enseeiht.ocl.OCLCollectionToJava.classpath.alljars">
        <path refid="fr.enseeiht.ocl.OCLCollectionToJava.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="oclCollectionToJava">
        <java classname="fr.enseeiht.ocl.OCLCollectionToJava.main.OclCollectionToJava" classpathref="fr.enseeiht.ocl.OCLCollectionToJava.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="oclCollectionToJava.alljars">
        <java classname="fr.enseeiht.ocl.OCLCollectionToJava.main.OclCollectionToJava" classpathref="fr.enseeiht.ocl.OCLCollectionToJava.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
